<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complains</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #ebf4ff;
      }

      .container {
        max-width: 1100px;
        margin: 1rem auto;
        padding: 1rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-top: 10px;
      }

      .cards-wrapper {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      }

      .complain-card {
        margin: 10px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 2px 10px rgba(0, 0, 0, 1);
        padding: 1rem;
        transition: all 0.3s ease;
        position: relative;
        font-size: 0.9rem;
      }

      .complain-date {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 8px;
      }

      .complain-image {
        max-width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .complain-text,
      .complain-details {
        margin-top: 8px;
      }

      .back-button {
        display: block;
        text-align: center;
        margin: 40px 0;
      }

      .back-button button {
        background-color: #3182ce;
        color: #ffff;
        border: none;
        margin-bottom: 50px;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
      }

      .back-button button:hover {
        background-color: #5da1e0;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header.ejs') %> <% if (locals.user) { %>
    <div class="container" style="margin-top: 32px">
      <div class="cards-wrapper">
        <% complains.forEach(element => { %>
        <div class="complain-card">
          <p class="complain-date">
            Reported on <%= new Date(element.date).toLocaleString('en-US', {
            year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit',
            minute: '2-digit' }) %>
          </p>
          <img
            class="complain-image"
            src="<%= element.imageURL.url %>"
            alt="Litter Image"
          />

          <div class="complain-details">
            <p><strong>Complain:</strong> <%= element.complain %></p>
            <p><strong>Address:</strong> <%= element.address %></p>
            <p><strong>Category:</strong> <%= element.category %></p>
            <p><strong>Weight:</strong> <%= element.weight %> kg</p>
            <p><strong>Status:</strong> <%= element.status %></p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <a href="/home" class="back-button">
      <button>Back</button>
    </a>
    <%- include('./partials/footer.ejs') %> <% } else { %> <%-
    include('./partials/notuser.ejs') %> <% } %>
  </body>
</html>
